<Window x:Class="EVerse.Navisworks.SelectByRevitId.Plugin.SelectByIdWindow"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             WindowStyle="None"
             WindowStartupLocation="CenterScreen"
             AllowsTransparency="True"
             Background="{x:Null}"
             mc:Ignorable="d"
             Width="380"
             Height="370"
             Title="Viewpoint by level"
             ResizeMode="NoResize"
             Topmost="True"
             ShowInTaskbar="True"
             Style="{DynamicResource CustomWindowStyle}">

    <Window.InputBindings>
        <KeyBinding Key="Escape"
                    Command="Close" />
        <KeyBinding Gesture="Enter"
                    Command="Open" />
        <KeyBinding Gesture="F1"
                    Command="Help" />
    </Window.InputBindings>

    <Window.CommandBindings>
        <CommandBinding Command="Close"
                        Executed="Close_Button" />
        <CommandBinding Command="Open"
                        Executed="OkButton_Click" />
        <CommandBinding Command="Help"
                        Executed="Pris_Link" />
    </Window.CommandBindings>

    <Border
        x:Name="MainWindow_Border"
        Background="{DynamicResource BackgroundColor}"
            BorderBrush="Transparent"
            BorderThickness="1,1,1,1"
            CornerRadius="15,15,15,15"
            Margin="10,10,10,0"
            MouseDown="Border_MouseDown">
        <Border.Effect>
            <DropShadowEffect 
                BlurRadius="20"
                Color="Gray"
                Opacity="0.3"
                ShadowDepth="0"
                Direction="0">
            </DropShadowEffect>
        </Border.Effect>

        <Grid Background="Transparent" RenderOptions.BitmapScalingMode="HighQuality" Margin="9,9,9,9">
            <Grid>

                <Button Style="{DynamicResource MainTitleButtonStyle}"
                    Background="Transparent" 
                    BorderBrush="Transparent" 
                    Click="Pris_Link"
                        Margin="10,10,0,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    Height="40" Width="141"  >
                </Button>

                <TextBlock 
                       Text="{Binding Path=Version, UpdateSourceTrigger=PropertyChanged}"
                       TextAlignment="Left"
                       Margin="241,19,34,0"
                       FontSize="15" 
                       Height="22" 
                       FontWeight="Light"
                       Foreground="Gray" 
                VerticalAlignment="Top">
                </TextBlock>

                <Button
                   Style="{DynamicResource TabCloseButtonStyle}"
                   Name="CloseButton"
                   Click="Close_Button"
                   VerticalAlignment="Top"
                   Margin="309,20,11,0"></Button>
            </Grid>
            <Line Stroke="{DynamicResource MainGray}"
                  X2="1000"
                  Opacity="0.5"
                  StrokeThickness="4"
                  VerticalAlignment="Top"
                  Margin="-9,59,-10,0" RenderTransformOrigin="0.5,0.5" Height="2">
                <Line.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform ScaleY="1" />
                        <SkewTransform />
                        <RotateTransform />
                        <TranslateTransform />
                    </TransformGroup>
                </Line.RenderTransform>
            </Line>
            <!--<Label
                Style="{DynamicResource SecondaryLabel}"
                HorizontalAlignment="Left" 
                Margin="28,118,0,0" 
                VerticalAlignment="Top"
                Content="Type Revit element Id" 
                Width="126"/>-->
            <TextBox
                     Style="{DynamicResource MainTextBox}" 
                     x:Name="textBox" 
                     Text="Insert Element Id" 
                     Height="34" 
                     Width="297"
                     Padding="12,2,2,2"
                     VerticalContentAlignment="Center"
                     HorizontalContentAlignment="Left" 
                     MinWidth="300" 
                     MinHeight="25" 
                     VerticalAlignment="Top" 
                     Margin="0,127,0,0" 
                     HorizontalAlignment="Center"
                     GotFocus="TextBox_GotFocus" 
                     LostFocus="TextBox_LostFocus"/>

            <Button Style="{DynamicResource ApplyButtonStyle}" 
                    x:Name="applyButton" 
                    Content="Select" 
                    HorizontalAlignment="Center" 
                    Margin="0,201,0,0" 
                    Width="122" 
                    Height="22" 
                    Click="OkButton_Click" 
                    VerticalAlignment="Top"/>

            <Button
                    Style="{DynamicResource CloseButtonStyle}"
                    Margin="185,286,10,0"
                    Background="Transparent"
                    Click="Title_Link"
                    FontWeight="Light"
                    FontSize="12"     
                    Foreground="{DynamicResource MainGray}" Height="22" VerticalAlignment="Top">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"  Background="Transparent" Margin="0,0,3,0">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="243*"/>
                                    <ColumnDefinition Width="47*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock 
                                    Margin="4,1,1,-1"
                                    FontWeight="Bold" Grid.ColumnSpan="2"><Run Text="Made with       "/><Run Language="es-es" Text=" "/><Run Text="by e-verse"/></TextBlock>

                                <Image Name="heartImage" 
                                       Visibility="Visible" 
                                       Source="/Pris.SelectByRevitId;component/Resources/Heart.jpg"
                                       HorizontalAlignment="Left"
                                       Width="18" 
                                       SnapsToDevicePixels="True" 
                                       RenderOptions.BitmapScalingMode="HighQuality" 
                                       RenderOptions.EdgeMode="Aliased" 
                                       Margin="63,-1,0,4" RenderTransformOrigin="0.5,0.5">
                                    <Image.RenderTransform>
                                        <TransformGroup>
                                            <ScaleTransform ScaleY="1"/>
                                            <SkewTransform/>
                                            <RotateTransform/>
                                            <TranslateTransform/>
                                        </TransformGroup>
                                    </Image.RenderTransform>
                                </Image>
                            </Grid>
                        </Border>
                        <ControlTemplate.Triggers >
                            <Trigger Property="IsDefaulted" Value="True">
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Opacity"  TargetName="border" Value="0.5"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Opacity"  TargetName="border" Value="0.2"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Button.Template>

            </Button>



        </Grid>
    </Border>
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="./Resources.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>
</Window>
