                                            BlurRadius="10" 
                                            Color="Gray" 
                                            Opacity="0.3" 
                                            ShadowDepth="0" 
                                            Direction="0"
                                        />
                                    </Ellipse.Effect>
                                </Ellipse>
                            </StackPanel>
                        </Grid>

